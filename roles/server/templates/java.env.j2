{{ print_value('ZK_SERVER_HEAP', '"' ~ zk_server_heap ~ '"') }}
{% endif -%}
{%- else %}
{{ print_value('SERVER_JVMFLAGS', '"-Xmx' ~ zk_server_heap|default(1024) ~ 'm"') }}
{% endif -%}